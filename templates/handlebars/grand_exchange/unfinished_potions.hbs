<a href="{{concat 'base_url' '/grand-exchange/unfinished-potions'}}"><h2>Unfinished Potions</h2></a>
<a id="substitute-cost" href="{{concat 'base_url' '/grand-exchange/227'}}"><img class="tippy" data-title="Vial of water" src="{{concat 'base_url' '/templates/bundle/assets/rs_items/vial-of-water.png'}}" /> Vial of Water Cost: {{this.0.vial_of_water_cost}}</a>

<table id="table-container">
    <thead>
        <tr>
            <th scope="col">Item</th>
            <th scope="col">Herb</th>
            <th scope="col">Buy Price</th>
            <th scope="col">Potion</th>
            <th scope="col">Sell Price</th>
            <th scope="col">GE Limit</th>
            <th scope="col">Profit</th>
        </tr>
    </thead>
    <tbody>
    {{#each this}}
        <tr>
            <td>{{name}}</td>
            <td> <a href="{{concat 'base_url' '/grand-exchange/' herb_id}}"> <img class="tippy" data-title="{{herb_name}}" src="{{concat 'base_url' '/templates/bundle/assets/rs_items/' herb_file_name}}" /> </a></td>
            <td>{{numCommaFormat herb_cost}}{{#if herb_updated_time}}<a id="question" class="tippy" data-title="The last known result was updated {{timePassed herb_updated_time}} ago.">?</a>{{/if}}</td>
            <td> <a href="{{concat 'base_url' '/grand-exchange/' potion_id}}"> <img class="tippy" data-title="{{name}}" src="{{concat 'base_url' '/templates/bundle/assets/rs_items/' potion_file_name}}" /> </a></td>
            <td>{{numCommaFormat potion_sale}}{{#if potion_updated_time}}<a id="question" class="tippy" data-title="The last known result was updated {{timePassed potion_updated_time}} ago.">?</a>{{/if}}</td>
            <td>{{numCommaFormat limit}}</td>
            <td class="{{#ifCond profit '>' 0}}positive{{/ifCond}}{{#ifCond profit '<' 0}}negative{{/ifCond}}">{{#ifCond profit '>' 0}}+{{/ifCond}} {{numCommaFormat profit}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>