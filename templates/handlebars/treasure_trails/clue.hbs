<div id="clue-info-container">
    <table class="clue-table" summary="Clue Information">
        <thead>
            <tr>
            {{#ifCond type '==' 'map'}}
                <th scope="col">Clue</th>
            {{/ifCond}}
                <th scope="col">Difficulty</th>
                <th scope="col">Requirements</th>
                <th scope="col">Challenge Answer</th>
            </tr>
        </thead>
        {{#ifCond description '!=' ''}}
        <tfoot>
            <tr>
                <td colspan="{{#ifCond type '==' 'map'}}4{{else}}3{{/ifCond}}" title="The description of the location or further details about the clue.">{{ description }}</td>
            </tr>
        </tfoot>
        {{/ifCond}}
        <tbody>
            <tr>
            {{#ifCond type '==' 'map'}}
                <td><img id="map-clue" src="{{concat 'base_url' '/templates/bundle/assets/treasure_trails/map_clues/' keywords '.png'}}" title="A picture of the clue."/></td>
            {{/ifCond}}
                <td title="The Clue level of difficulty.">{{ difficulty }}</td>
                <td title="The requirements to complete the clue.">
                    {{#ifCond type '==' 'emote'}}
                        {{#ifCond requirements '!=' 'Nothing'}}
                            {{#each requirements}}
                            <img id="ge-item" class="tippy" data-title="{{title (replace (replace (replace this '-' ' ') ' 4' '') ' 2' '')}}" src="{{concat 'base_url' '/templates/bundle/assets/rs_items/' this '.png'}}" />
                            {{/each}}
                        {{else}}
                            {{ requirements }}
                        {{/ifCond}}
                    {{else}}
                        {{ requirements }}
                    {{/ifCond}}
                </td>
                <td title="The solution to the clue.">
                    {{#if (isSubstring ' Puzzle' challenge)}}
                        <img class="tippy" data-title="{{challenge}}" src="{{concat 'base_url' '/templates/bundle/assets/treasure_trails/clue_puzzle/' (replace challenge ' ' '-') '.png'}}" />
                    {{else}}
                        {{#ifCond type '==' 'emote'}}
                            {{#each challenge}}
                            <span><img id="emote-icon" class="tippy" data-title={{this}} src="{{concat 'base_url' '/templates/bundle/assets/treasure_trails/emote_icon/' (replace this ' ' '-') '.png'}}" />{{this}}</span>
                            {{/each}}
                        {{else}}
                            {{challenge}}
                        {{/ifCond}}
                    {{/if}}
                </td>
            </tr>
        </tbody>
    </table>
</div>