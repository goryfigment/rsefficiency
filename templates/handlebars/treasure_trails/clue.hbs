<h2 id="clue-title" title="This contains what the clue displays, word-for-word.">{{ clue }}</h2>

{{#if spot_title_1}}
<h2 id="clue-title" title="Step 1">{{ spot_title_1 }}</h2>
{{/if}}

<div id="coordinate-clue">
    <div id="clue-spot-wrapper" title="The ingame location of where to solve the clue.">
        <div class="clue-subtitle">NPC Spot</div>
        <div class="clue-image-container">
            <img class="clue-spot" src="{{concat 'base_url' '/templates/bundle/assets/treasure_trails/' type '_spot/' keywords '.png'}}" />
        </div>
    </div>

    <div id="clue-info-wrapper">
        <div class="clue-panel-wrapper" title="A general map location of the clue spot.">
            <div id="clue-map-wrapper">
                <div class="clue-subtitle">Map</div>
                <div class="clue-image-container">
                    <img class="clue-map" src="{{concat 'base_url' '/templates/bundle/assets/treasure_trails/' type '_map/' keywords '-map.png'}}" />
                </div>
            </div>
        </div>
    </div>
</div>

